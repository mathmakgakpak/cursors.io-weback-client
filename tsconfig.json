{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES6",
    "module": "ES2022",
    "strict": true,
    "removeComments": true,
    "downlevelIteration": true
  },
  "include": [
    "src/ts/*"
  ]
}